<!-- SUMÁRIO -->
<div class="min-h-screen flex page-break">
    <!-- Lado Azul (1/4)  -->
    <div
        class="w-1/4 bg-gradient-to-r from-blue-600 to-blue-400 relative border-r-8 border-blue-300 overflow-hidden"
    >
        <!-- Círculo decorativo branco no topo esquerdo -->
        <div class="absolute -top-48 -left-48">
            <div
                class="w-96 h-96 border-8 border-white rounded-full flex items-center justify-center"
            >
                <div
                    class="w-48 h-48 border-8 border-white rounded-full bg-blue-200 bg-opacity-30"
                ></div>
            </div>
        </div>

        <!-- Bolinhas brancas no topo -->
        <div class="absolute top-6 left-6">
            <div class="grid grid-cols-2 gap-4">
                <div class="w-4 h-4 bg-white rounded-full opacity-70"></div>
                <div class="w-4 h-4 bg-white rounded-full opacity-70"></div>

                <div class="w-4 h-4 bg-white rounded-full opacity-60"></div>
                <div class="w-4 h-4 bg-white rounded-full opacity-60"></div>

                <div class="w-4 h-4 bg-white rounded-full opacity-50"></div>
                <div class="w-4 h-4 bg-white rounded-full opacity-50"></div>

                <div class="w-4 h-4 bg-white rounded-full opacity-40"></div>
                <div class="w-4 h-4 bg-white rounded-full opacity-40"></div>

                <div class="w-4 h-4 bg-white rounded-full opacity-30"></div>
                <div class="w-4 h-4 bg-white rounded-full opacity-30"></div>
            </div>
        </div>
    </div>

    <!-- Lado Branco com conteúdo do sumário -->
    <div
        class="w-3/4 bg-white p-12 flex flex-col text-black relative overflow-hidden"
    >
        <!-- Círculo azul decorativo no canto inferior direito -->
        <div class="absolute -bottom-48 -right-48">
            <div
                class="w-96 h-96 bg-blue-500 rounded-full flex items-center justify-center"
            >
                <div class="w-48 h-48 bg-white rounded-full"></div>
            </div>
        </div>

        <!-- Bolinhas azuis no canto inferior direito -->
        <div class="absolute bottom-6 right-6">
            <div class="grid grid-cols-2 gap-4">
                <div class="w-4 h-4 bg-blue-700 rounded-full opacity-70"></div>
                <div class="w-4 h-4 bg-blue-700 rounded-full opacity-70"></div>

                <div class="w-4 h-4 bg-blue-700 rounded-full opacity-60"></div>
                <div class="w-4 h-4 bg-blue-700 rounded-full opacity-60"></div>

                <div class="w-4 h-4 bg-blue-700 rounded-full opacity-50"></div>
                <div class="w-4 h-4 bg-blue-700 rounded-full opacity-50"></div>

                <div class="w-4 h-4 bg-blue-700 rounded-full opacity-40"></div>
                <div class="w-4 h-4 bg-blue-700 rounded-full opacity-40"></div>

                <div class="w-4 h-4 bg-blue-700 rounded-full opacity-30"></div>
                <div class="w-4 h-4 bg-blue-700 rounded-full opacity-30"></div>
            </div>
        </div>

        <!-- Cabeçalho da página -->
        <div class="text-center mb-12 relative z-10">
            <div class="w-5/6 mx-auto flex items-center">
                <div
                    class="flex-1 h-[1px] rounded bg-gradient-to-r from-blue-200 via-blue-600 to-blue-200"
                ></div>
                <span class="ml-3 text-sm font-semibold text-black">
                    Página <%= numeroPaginas?.sumario || '02' %>
                </span>
            </div>

            <!-- Título -->
            <h1 class="text-5xl font-bold text-black mt-6">SUMÁRIO</h1>
        </div>

        <!-- Lista do sumário -->
        <div class="flex-1 relative z-10">
            <div class="space-y-6 max-w-lg">
                <!-- Item 1 -->
                <div
                    class="flex items-center justify-between border-b border-gray-200 pb-3"
                >
                    <div class="flex items-center">
                        <div
                            class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold mr-4"
                        >
                            1
                        </div>
                        <span class="text-xl font-semibold text-gray-800"
                            >Objetivo</span
                        >
                    </div>
                    <span class="text-lg font-bold text-blue-600"
                        ><%= numeroPaginas?.objetivo || '03' %></span
                    >
                </div>

                <!-- Item 2 -->
                <div
                    class="flex items-center justify-between border-b border-gray-200 pb-3"
                >
                    <div class="flex items-center">
                        <div
                            class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold mr-4"
                        >
                            2
                        </div>
                        <span class="text-xl font-semibold text-gray-800"
                            >Metodologia</span
                        >
                    </div>
                    <span class="text-lg font-bold text-blue-600"
                        ><%= numeroPaginas?.metodologia || '04' %></span
                    >
                </div>

                <!-- Item 3 -->
                <div
                    class="flex items-center justify-between border-b border-gray-200 pb-3"
                >
                    <div class="flex items-center">
                        <div
                            class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold mr-4"
                        >
                            3
                        </div>
                        <span class="text-xl font-semibold text-gray-800"
                            >Panorama Situacional</span
                        >
                    </div>
                    <span class="text-lg font-bold text-blue-600"
                        ><%= numeroPaginas?.panorama || '05' %></span
                    >
                </div>

                <!-- Item 4 -->
                <div
                    class="flex items-center justify-between border-b border-gray-200 pb-3"
                >
                    <div class="flex items-center">
                        <div
                            class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold mr-4"
                        >
                            4
                        </div>
                        <span class="text-xl font-semibold text-gray-800"
                            >Resumo Executivo</span
                        >
                    </div>
                    <span class="text-lg font-bold text-blue-600"
                        ><%= numeroPaginas?.resumoExecutivo || '06' %></span
                    >
                </div>

                <!-- Item 5 -->
                <div
                    class="flex items-center justify-between border-b border-gray-200 pb-3"
                >
                    <div class="flex items-center">
                        <div
                            class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold mr-4"
                        >
                            5
                        </div>
                        <span class="text-xl font-semibold text-gray-800"
                            >Não Conformidades</span
                        >
                    </div>
                    <span class="text-lg font-bold text-blue-600"
                        ><%= numeroPaginas?.naoConformidades || '07' %></span
                    >
                </div>

                <!-- Item 6 -->
                <div
                    class="flex items-center justify-between border-b border-gray-200 pb-3"
                >
                    <div class="flex items-center">
                        <div
                            class="w-8 h-8 bg-blue-500 text-white rounded-full flex items-center justify-center text-sm font-bold mr-4"
                        >
                            6
                        </div>
                        <span class="text-xl font-semibold text-gray-800"
                            >Recomendações</span
                        >
                    </div>
                    <span class="text-lg font-bold text-blue-600"
                        ><%= numeroPaginas?.recomendacoes || '08' %></span
                    >
                </div>
            </div>
        </div>
    </div>
</div>
