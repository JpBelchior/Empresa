<div class="min-h-screen page-break bg-white text-black flex flex-col relative">
    <!-- CABEÇALHO REUTILIZÁVEL -->
    <%- include('header', { numeroPagina: numeroPaginas?.panorama || '05',
    tituloSecao: 'PANORAMA SITUACIONAL' }) %>

    <!-- Conteúdo principal -->
    <div class="flex-1 flex flex-col relative z-0">
        <!-- Contextualização da Análise -->
        <div class="text-center px-6 mb-8">
            <h2
                class="text-2xl text-sky-900 font-semibold leading-relaxed mb-8"
            >
                Contextualização da Análise
            </h2>

            <!-- Container da Imagem da Área -->
            <div class="flex justify-center items-center mb-12">
                <!-- Barra azul lateral mais próxima -->
                <div
                    class="w-12 bg-blue-500 mr-4 rounded-md"
                    style="height: 280px"
                ></div>

                <!-- Imagem da área -->
                <div
                    class="relative border-4 border-blue-300 bg-gray-100 shadow-md"
                    style="width: 500px; height: 280px"
                >
                    <% if (imagens && imagens.imagem_area) { %>
                    <img
                        src="<%= imagens.imagem_area %>"
                        alt="Imagem da Área"
                        class="w-full h-full object-cover rounded-sm"
                    />
                    <% } else { %>
                    <div class="w-full h-full flex items-center justify-center">
                        <span class="text-red-500 text-xl font-bold">
                            IMAGEM DA ÁREA
                        </span>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Seção de Referências Próximas -->
        <div class="px-16 py-8 bg-white">
            <h3 class="text-2xl font-bold text-sky-900 mb-6 text-center">
                Referências Próximas
            </h3>

            <ol class="list-none space-y-3">
                <% dados.referencias_proximas_lista.forEach((item, index) => {
                %>
                <li class="flex items-start">
                    <span
                        class="inline-flex items-center justify-center w-7 h-7 bg-blue-400 text-white rounded-full text-sm font-bold mr-3 mt-0.5 flex-shrink-0"
                    >
                        <%= index + 1 %>
                    </span>
                    <span
                        class="text-lg text-gray-800 leading-relaxed flex-1 bg-blue-100 rounded-md pl-2"
                    >
                        <%= item %>
                    </span>
                </li>
                <% }); %>
            </ol>
        </div>

        <!-- Seção de Panorama Situacional - Exposição ao Risco -->
        <div class="px-16 py-8 bg-white">
            <h3 class="text-2xl font-bold text-sky-900 mb-6 text-center">
                Panorama Situacional - Exposição ao Risco
            </h3>

            <ol class="list-none space-y-4">
                <% dados.panorama_lista.forEach((item, index) => { %>
                <li class="flex items-start">
                    <span
                        class="inline-flex items-center justify-center w-8 h-8 bg-red-400 text-white rounded-full text-sm font-bold mr-4 mt-0.5 flex-shrink-0"
                    >
                        <%= index + 1 %>
                    </span>
                    <span
                        class="text-lg text-gray-800 leading-relaxed flex-1 capitalize bg-red-100 rounded-md pl-2"
                    >
                        <%= item %>
                    </span>
                </li>
                <% }); %>
            </ol>
        </div>
    </div>

    <!-- Rodapé -->
    <%- include('footer') %>
</div>
