<!-- METODOLOGIA - VERSÃO FINAL COM IMAGEM MAIS PARA BAIXO -->
<div class="min-h-screen page-break bg-white text-black relative">
    <!-- CABEÇALHO REUTILIZÁVEL -->
    <%- include('header', { numeroPagina: numeroPaginas?.metodologia || '04',
    tituloSecao: 'METODOLOGIA' }) %>

    <!-- Conteúdo principal -->
    <div class="relative z-0 flex flex-col min-h-screen gap-y-4">
        <!-- Texto explicativo centralizado -->
        <div class="text-center px-6 max-w-xl mx-auto">
            <p class="text-xl text-sky-900 leading-relaxed">
                Identificando vulnerabilidades e<br />
                deficiências em 5 etapas:
            </p>
        </div>

        <!-- Imagem dos pilares centralizada e maior -->
        <div
            class="flex justify-center px-4 -mt-[60px]"
            style="height: calc(100vh - 270px)"
        >
            <% if (imagens && imagens.pilares) { %>
            <img
                src="<%= imagens.pilares %>"
                alt="Metodologia - 5 Pilares"
                class="object-cover w-full h-full mx-auto block"
                style="object-position: top"
            />
            <% } else { %>

            <div
                class="w-full flex items-center justify-center bg-gradient-to-r from-blue-800 to-blue-600 rounded-lg"
                style="height: 70vh; max-width: 95%"
            >
                <span class="text-white text-lg font-semibold text-center">
                    🖼️ Imagem dos pilares não encontrada
                    <br />
                    <small
                        >Verifique se pilares.png está em
                        pdf-generator/imagens/</small
                    >
                </span>
            </div>
            <% } %>
        </div>

        <!-- Espaçamento para o rodapé -->
        <div style="height: 50px"></div>
    </div>

    <!-- RODAPÉ REUTILIZÁVEL -->
    <%- include('footer', { dados: dados }) %>
</div>
